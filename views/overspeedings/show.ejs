<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <!-- Page Heading -->
  <h3 class="text-center fw-bold text-primary mb-4">
    <i class="bi bi-speedometer2"></i> Overspeeding Listing Details
  </h3>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Listing Card -->
      <div class="card shadow-lg border-0">
        <!-- Listing Image -->
        <img
          src="<%= listing.photo %>"
          class="card-img-top rounded-top fixed-image"
          alt="Number Plate Image"
        />

        <div class="card-body">
          <!-- Listing Details -->
          <p class="card-text"><strong>Name:</strong> <%= listing.name %></p>
          <p class="card-text"><strong>Email:</strong> <%= listing.email %></p>
          <p class="card-text">
            <strong>Number Plate:</strong>
            <span class="text-primary fw-semibold"
              ><%= listing.number_plate %></span
            >
          </p>
          <p class="card-text">
            <strong>Created At:</strong> <%= listing.created_at %>
          </p>
          <p class="card-text">
            <strong>Overspeed Amount:</strong>
            <span class="text-danger fw-bold"
              ><%= listing.overspeeding_amount %> km/h</span
            >
          </p>
          <p class="card-text">
            <strong>Status:</strong>
            <span
              class="badge <%= listing.is_fine_paid ? 'bg-success' : 'bg-danger' %>"
            >
              <%= listing.is_fine_paid ? "Fine Paid" : "Fine Not Paid" %>
            </span>
          </p>

          <!-- Action Buttons Inside Card -->
          <div class="d-flex justify-content-between mt-4">
            <a
              href="/admin/listings"
              class="btn btn-secondary w-45"
            >
              <i class="bi bi-arrow-left"></i> Back to Listings
            </a>
            <a
              href="/admin/listings/<%= listing._id %>/edit"
              class="btn btn-primary w-45"
            >
              <i class="bi bi-pencil-square"></i> Edit
            </a>
          </div>

          <!-- Delete Button -->
          <form
            method="POST"
            action="/admin/listings/<%= listing._id %>?_method=DELETE"
            class="mt-3"
          >
            <button type="submit" class="btn btn-danger w-100">
              <i class="bi bi-trash"></i> Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- CSS to ensure consistent image sizing -->
<style>
  .fixed-image {
    width: 100%;
    height: 250px; /* Fixed height for consistency */
    object-fit: cover;
  }
  .w-45 {
    width: 48%;
  }
</style>
