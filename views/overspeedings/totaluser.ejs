<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% allUsers.forEach(user => { %>
            <div class="col mb-4">
                <div class="card shadow-lg">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= user.name %></h5>
                        <p class="card-text">
                            <strong>Email:</strong> <%= user.email %><br>
                            <strong>Role:</strong> <%= user.role %><br>
                            <strong>Number Plate:</strong> <%= user.number_plate.join(", ") %><br>
                            <strong>Total Unpaid Fines:</strong> <%= user.total_unpaid_fines %>
                        </p>
                        <a href="/admin/users/<%= user._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>