<% layout('layouts/boilerplate') %>
<body>
    <div class="container mt-5">
        <h3 class="text-center mb-4">All Paid Listings</h3>
        <div class="row">
            <% if (paidListings.length === 0) { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No paid listings available.</p>
                </div>
            <% } else { %>
                <% for (let listing of paidListings) { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/admin/listings/<%= listing._id %>" class="text-decoration-none">
                                        <%= listing.name %>
                                    </a>
                                </h5>
                                <p class="card-text">
                                    <strong>Overspeeding Amount:</strong> <%= listing.overspeeding_amount %> km/h<br>
                                    <strong>Number Plate:</strong> <%= listing.number_plate %><br>
                                    <strong>Status:</strong> 
                                    <span class="text-success font-weight-bold">Fine Paid</span>
                                </p>
                                <a href="/admin/listings/<%= listing._id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
