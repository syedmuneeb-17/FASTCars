<% layout('layouts/userboilerplate') %>

<div class="container mt-5">
  <!-- Page Heading -->
  <h3 class="text-center fw-bold mb-4">
    <i class="bi bi-check-circle-fill text-success"></i> All Paid Listings
  </h3>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% if (paidListings.length === 0) { %>
    <!-- No Listings Message -->
    <div class="col-12 text-center">
      <p class="text-muted fs-5">No paid listings available.</p>
    </div>
    <% } else { %> <% paidListings.forEach(listing => { %>
    <div class="col">
      <!-- Listing Card -->
      <div class="card shadow-lg border-0 h-100">
        <div class="card-body d-flex flex-column">
          <!-- Listing Name -->
          <h5 class="card-title fw-bold">
           
            <a
            
              href="/user/listings/<%= listing._id %>"
              class="text-decoration-none"
            >
            <i class="bi bi-car-front-fill"></i> <%= listing.name %>
            </a>
          </h5>

          <!-- Listing Details -->
          <p class="card-text">
            <strong> Overspeeding Amount:</strong>
            <span class="text-danger fw-bold"> <i class="bi bi-speedometer2"></i> <%= listing.overspeeding_amount %> km/h</span>
          </p>
          <p class="card-text">
            <strong> Number Plate:</strong>
            <span class="text-primary fw-semibold"> <i class="bi bi-card-text"></i> <%= listing.number_plate %></span>
          </p>
          <p class="card-text">
            <strong> Status:</strong>
            <span class="badge <%= listing.is_fine_paid ? 'bg-success' : 'bg-danger' %>">
              <i class="bi bi-check-circle-fill"></i> <%= listing.is_fine_paid ? 'Fine Paid' : 'Fine Unpaid' %>
            </span>
          </p>

          <!-- Action Buttons -->
          <div class="mt-auto">
            <a href="/user/listings/<%= listing._id %>" class="btn btn-primary w-100">
              <i class="bi bi-eye-fill"></i> View Details
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }) %> <% } %>
  </div>
</div>
