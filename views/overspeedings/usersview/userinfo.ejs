<% layout('layouts/userboilerplate') %>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header text-center bg-primary text-white">
            <h3>User Information</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                
                <div class="col-md-8">
                    <h4><strong>Name:</strong> <%= user.name %></h4>
                    <h5><strong>Username:</strong> <%= user.username %></h5>
                    <h5><strong>Email:</strong> <%= user.email %></h5>
                    <h5><strong>Role:</strong> <%= user.role %></h5>
                    <h5><strong>Number Plate(s):</strong><%= user.number_plate %></h5>
                    
                    <h5 class="mt-3"><strong>Total Unpaid Fines:</strong> <%= user.total_unpaid_fines %></h5>
                </div>
            </div>
        </div>
    </div>
</div>
