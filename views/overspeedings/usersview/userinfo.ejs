<% layout('layouts/userboilerplate') %>

<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <!-- Card Header -->
    <div class="card-header text-center bg-primary text-white">
      <h3><i class="bi bi-person-circle"></i> User Information</h3>
    </div>

    <!-- Card Body -->
    <div class="card-body">
      <div class="row">
        <div class="col-md-8 mx-auto">
          <h4 class="fw-bold">
            <i class="bi bi-person"></i> Name:
            <span class="fw-normal"><%= user.name %></span>
          </h4>
          <h5>
            <i class="bi bi-person-badge"></i> Username:
            <span class="fw-normal"><%= user.username %></span>
          </h5>
          <h5>
            <i class="bi bi-envelope"></i> Email:
            <span class="fw-normal"><%= user.email %></span>
          </h5>
          <h5>
            <i class="bi bi-shield-lock"></i> Role:
            <span class="fw-normal"><%= user.role %></span>
          </h5>
          <h5>
            <i class="bi bi-car-front"></i> Number Plate(s):
            <span class="fw-normal"><%= user.number_plate %></span>
          </h5>

          <h5 class="mt-3 text-danger fw-bold">
            <i class="bi bi-cash-coin"></i> Total Unpaid Fines:
            <span class="fw-normal"><%= user.total_unpaid_fines %></span>
          </h5>
        </div>
      </div>
    </div>
  </div>
</div>
