<% layout('layouts/boilerplate') %>
<div class="container my-4">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h3>User Details</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= listing.name %></h5>
            <p class="card-text">
                <strong>Username:</strong> <%= listing.username %><br>
                <!-- <strong>Password:</strong> <%= listing.hash %><br> -->
                <strong>Email:</strong> <%= listing.email %><br>
                <strong>Role:</strong> <%= listing.role %><br>
                <strong>Number Plate(s):</strong> <%= listing.number_plate.join(", ") %><br>
                <strong>Total Unpaid Fines:</strong> <%= listing.total_unpaid_fines %>
            </p>
        </div>
        

        <div class="mt-4">
            <!-- Edit button -->
            <a href="/admin/users/<%= listing._id %>/edit" class="btn btn-info">Edit</a>
    
            <!-- Delete button -->
            <form method="POST" action="/admin/users/<%= listing._id %>?_method=DELETE" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                    Delete
                </button>
            </form>
        </div>


        <div class="card-footer text-center">
            <a href="/admin/totalusers" class="btn btn-secondary">Back to All Users</a>
        </div>
    </div>
</div>